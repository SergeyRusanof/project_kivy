<ItemButton@Button>:
    color:[.28,.44,.16,0]
    font_size: '12sp'

<ItemBox@BoxLayout>:
    orientation:'horizontal'
    pos_hint: {'center_x':0, 'center_y':0.8}

<Container>:
    rows:2
    padding:2
    show_list: show_list

    GridLayout
        size_hint: 1, 0.5
        cols:3

        ItemBox
            padding: [1, 0, 0, 0]
            TextInput:
                id: show_list
                readonly: True
                text_size: (440/2, 590/2 )
                valign:'top'
                halign:'left'
                text:'list'
                font_size: '14sp'
        ItemBox
            orientation:'horizontal'
            size_hint: 0.15, 0.5

            Label:
                text_size: (420/2, 605/2 )
                valign:'top'
                halign:'center'
                text:'h'
                font_size: '14sp'
        ItemBox
            size_hint: 0.15, 0.5
            padding: [0, 0, 1, 0]
            Label:
                text_size: (420/2, 605/2 )
                valign:'top'
                halign:'center'
                text:'ch'
                font_size: '14sp'
